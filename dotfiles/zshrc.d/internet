work() {
	if [ -f "/etc/hosts.play" ]
	then
		return 1
	fi

	sudo cp /etc/hosts /etc/hosts.play

	for HOSTNAME in reddit.com news.ycombinator.com facebook.com bbcredux.com youtube.com news.bbc.co.uk uwcs.co.uk
	do
		echo "127.0.0.1	$HOSTNAME www.$HOSTNAME" | sudo tee -a /etc/hosts >/dev/null
	done

	echo "I: Entered work mode"
}

play() {
	if [ -f "/etc/hosts.play" ]
	then
		echo "I: Leaving work mode."
		sudo mv /etc/hosts.play /etc/hosts
	fi
}
